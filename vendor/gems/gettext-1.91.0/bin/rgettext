begin
  require 'gettext/rgettext'
rescue LoadError
  begin
    require 'rubygems'
    require_gem 'gettext/rgettext'
  rescue LoadError
    raise 'Ruby-GetText-Package are not installed.'
  end
end

GetText.rgettext
