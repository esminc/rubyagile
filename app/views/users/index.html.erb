<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Nickname</th>
    <th>Email</th>
    <th>Open id url</th>
    <th>Amazon associate</th>
    <th>Aboutme url</th>
    <th>Admin</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.nickname %></td>
    <td><%=h user.email %></td>
    <td><%=h user.open_id_url %></td>
    <td><%=h user.amazon_associate_id %></td>
    <td><%=h user.aboutme_url %></td>
    <td><%=h user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
