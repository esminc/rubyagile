<h1>New user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>Login</b><br />
    <%= f.text_field :login %>
  </p>

  <p>
    <b>Nickname</b><br />
    <%= f.text_field :nickname %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Open id url</b><br />
    <%= f.text_field :open_id_url %>
  </p>

  <p>
    <b>Amazon associate</b><br />
    <%= f.text_field :amazon_associate_id %>
  </p>

  <p>
    <b>Aboutme url</b><br />
    <%= f.text_field :aboutme_url %>
  </p>

  <p>
    <b>Admin</b><br />
    <%= f.check_box :admin %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
