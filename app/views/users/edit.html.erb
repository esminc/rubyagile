<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>Open id url</b> <%=h @user.open_id_url %>
  </p>

  <p>
    <b>Login</b> <%= f.text_field :login %>
  </p>

  <p>
    <b>Email</b> <%= f.text_field :email %>
  </p>

  <p>
    <b>Full Name</b> <%= f.text_field :fullname %>
  </p>


  <p>
    <b>Amazon associate</b> <%= f.text_field :amazon_associate %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %>
