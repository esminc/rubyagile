:ruby
  site_version = 'version:β'
  site_lead = 'Rubyとアジャイルでふつうのシステム開発を実現する永和システムマネジメントのWebサイト'
  default_title = "#{site_name} #{site_version} - #{site_lead}"

!!! Strict
%html(xmlns='http://www.w3.org/1999/xhtml' xml:lang='ja')
  %head
    %meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    %meta(http-equiv='Content-Style-Type' content='text/css')
    %meta(http-equiv='Content-Style-Type' content='text/css')
    %meta(name='description' content=site_lead)
    %meta(name='keywords' content='Ruby,Rails,RoR,Agile,アジャイル,システム開発,永和システムマネジメント,ESM')
    %link(rel='icon' type='image/png' href='/favicon.png')
    %link(rel='alternate' type='application/atom+xml' title='新着記事のAtomフィード'){:href => feed_articles_url(:format => :xml)}
    %link(rel='alternate' type='application/atom+xml' title='/pagesのAtomフィード'){:href =>  url_for(:controller => 'pages', :action => 'feed.xml', :only_path => false)}
    != stylesheet_link_tag 'application'
    != javascript_include_tag :defaults
    %script(type='text/javascript' src='http://s.hatena.ne.jp/js/HatenaStar.js')
    :javascript
      Hatena.Star.EntryLoader.headerTagAndClassName = ['h2','title'];
    %title= yield(:title) || default_title

  %body
    #wrapper
      #header
        .title
          %h1
            != link_to h(site_name), root_path
            %span.site_version= site_version
          %h2.lead= site_lead

      #gnavi
        %span.menu
          != link_to 'トップ', root_path
          != link_to 'おしらせ', articles_path
          != link_to 'ふつうのシステム開発', front_page_path
          != link_to '活動実績', page_path('OurWorks')
          != link_to 'お問い合わせ・ご相談', :controller => 'contacts'

      #container
        #content
          != render :partial => 'shared/flash', :locals => {:flash => flash}
          != yield

      #sidebar!= yield(:sidebar) || render(:partial => 'shared/sidebar')

      #footer
        %p このサイトでは<a href="http://www.blankcss.com" target="_blank">BlankCSS.com</a>の提供するCSSを利用しています。
        %p
          このサイトに掲載されている文章のライセンスは<br />
          <a rel="license" href="http://creativecommons.org/licenses/by/2.1/jp/">「Creative Commons Attribution 2.1 Japan License」</a>です。<br />
          <a class="image" rel="license" href="http://creativecommons.org/licenses/by/2.1/jp/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by/2.1/jp/88x31.png" /></a>

        - unless logged_in?
          .signin!= link_to 'サインイン', signin_path

    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript
      var pageTracker = _gat._getTracker("UA-3364058-1");
      pageTracker._initData();
      pageTracker._trackPageview();
