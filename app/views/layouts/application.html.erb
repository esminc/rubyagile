<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Content-Style-Type" content="text/css" />
<%= stylesheet_link_tag "rubyagile" %>
<title>Ruby x Agile</title>

</head>
<body>
<div id="head">
<% if logged_in? -%>
<%= current_user.login %> <%= link_to('Log out', {:controller => 'sessions', :action => 'destroy'}) %>
<% else -%>
<%= link_to('Log in', {:controller => 'sessions', :action => 'new'}) %>
<% end -%>
</div>
<hr />
<% if flash[:warn] -%>
<div class="warn"><%= flash[:warn] %></div>
<% elsif flash[:notice] -%>
<div class="notice"><%= flash[:notice] %></div>
<% end -%>
<div id="contents">
<%= yield %>
</div>
<hr />
<div id="footer">

</div>
</body>
</html>
