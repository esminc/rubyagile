<h1>New article</h1>

<%= error_messages_for :article %>

<% form_for(@article) do |f| %>
  <p>
    <b>Title</b> <%= f.text_field :title %>
  </p>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
