%h2 新規ブログ記事の投稿

!= error_messages_for :article

- form_for(@article) do |f| 
  != render :partial => f 
  %p
    != f.submit "プレビュー", :name => "preview"
    != f.submit "草稿"
    != f.submit "公開", :name => "publish"

- form_for(:article, @article, :url => { :action => 'create' }, :html => { :multipart => true }) do |f| 
  != render :partial => 'upload_image', :locals => { :image_f => f } 
