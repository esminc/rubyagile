!!! XML
%rdf:RDF{:xmlns => "http://purl.org/rss/1.0/", "xmlns:rdf" => "http://www.w3.org/1999/02/22-rdf-syntax-ns#", "xmlns:dc" => "http://purl.org/dc/elements/1.1/", "xmlns:lang" => "ja" }
  %channel{"rdf:about" => formatted_feed_articles_url(:rdf) }
    %title Ruby x Agile
    %link= articles_url
    %description Rubyでアジャイルなソフトウェア開発を実現する永和システムマネジメントのWebサイト
    - unless @articles.empty? 
      %items
        %rdf:Seq
          - @articles.each do |article| 
            %rdf:li{"rdf:resource" => article_url(article)}/ 
  - @articles.each do |article| 
    %item{"rdf:about" => article_url(article)}
      %title= article.title
      %link= article_url(article)
      %description= parse_article(article)
      %dc:date= article.updated_at.to_s(:db)
