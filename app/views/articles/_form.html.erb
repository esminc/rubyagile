  <p>
	<b>投稿者</b>: <%= @article.author_name %>
	<%= form.hidden_field :user_id %>
  </p>
  <p>
    <b>記事のタイトル</b><br />
	<%= form.text_field :title, :size => 55 ,:class => "title"%>
  </p>
